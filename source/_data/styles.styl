// 前一篇 下一篇
.post-nav-item {
  a {
    font: inherit;
    color: #fff;
    width: auto;
    float: left;
    line-height: 45px;
    overflow: hidden;
    position: relative;
    transition: all 1s;
    cursor: pointer;
    line-height: 1;
    padding: 10px 25px;
    margin: 0;
    border-radius: 3px;

    &:before {
      left: -96%;
      transition: all 0.5s;
    }

    &:active {
      background: #ccc;
      color: #000;
      top: 2px;
      transition: all 1s;
    }

    &:hover:before {
      left: 37%;
      transition: all 1s;
    }

    &:hover>span {
      transform: translateX(300%);
      transition: all 1s;
    }

    span {
      display: inline-block;
      transition: all 0.5s;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      width: 80px;
    }
  }

  .prev {
    background: #59c493;
    color: #fff;

    &:before {
      content: '←';
      position: absolute;
      font-size: 32px;
      top: 5px;
    }
  }

  .next {
    background: #59c493;
    color: #fff;
    float: right;

    &:before {
      content: '→';
      position: absolute;
      font-size: 32px;
      top: 5px;
    }
  }
}

