.tag-cloud-tags a:nth-child(9n+5) {
  background-color: #B433FF;
}

.tag-cloud-tags a:nth-child(9n+6) {
  background-color: #00ABA9;
}

.tag-cloud-tags a:nth-child(9n+7) {
  background-color: #B37333;
}

.tag-cloud-tags a:nth-child(9n+8) {
  background-color: #FF6600;
}

.tag-cloud-tags a {
  opacity: 0.8;
  color: #fff !important;
  font-size: 13px !important;
  border-radius: 2px;
  background-color: #428BCA;
  display: inline-block;
  margin: 0 5px 5px 0;
  padding: 4px 8px;
  line-height: 21px;
}

.tagcloud a:hover {
  opacity: 1;
}

.search-popup #no-result {
  color: #59c493;
}

.post-block {
  +mobile() {
    .post-header {
      text-align: left;
      .post-title {
        text-align: left;
        text-overflow: -o-ellipsis-lastline;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
      }

      .post-meta {
        text-align: left;
      }
    }
  }
}